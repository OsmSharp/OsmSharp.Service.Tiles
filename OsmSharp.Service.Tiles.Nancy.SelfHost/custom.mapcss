canvas {
	background-color: #EEEEEE;
	default-points: false;
	default-lines: false;
}

/* ===== Placenames ===== */
node[place]																{ text: name; font-family: Technic; text-color: #534d38; text-halo-radius: 2; text-halo-color: white; }
node|z16-[place=neighbourhood]											{ font-size: 12; }
node|z16-[place=suburb]													{ font-size: 13; }
node|z16-[place=farm]													{ font-size: 12; }
node|z16-[place=isolated_dwelling]										{ font-size: 12; }
node|z15-[place=hamlet]													{ font-size: 14; }
node|z12-[place=village]												{ font-size: 16; }
node[place=town]														{ font-size: 18; }
node[place=city]														{ font-size: 18; }

/* ===== Landuse ===== */
area|z12-[landuse=meadow], area|z12-[landuse=farmland],
area|z12-[landuse=scrub], area|z12-[landuse=grass]						{ z-index: -5; fill-color: #E8EAE4; }
area|z12-[landuse=forest], area|z12-[natural=wood]						{ z-index: -4; fill-color: #E8EAE4; }
area|z12-[leisure]														{ z-index: -4; fill-color: #DADFC1; }
/* area|z10-[landuse=residential]										{ z-index: -6; fill-color: #F9F8F5; } */

area|z12-[natural=beach]												{ z-index: -4; fill-color: #FFF1BA; }

/* ===== Landuse ===== */
/* area|z12-[building]													{ z-index: -5; fill-color: lightgray; } */

/* ===== Water ==== */
area[natural=water]														{ z-index: -3; fill-color: #C2CAD0;  }
way|z10-[waterway]														{ z-index: -3; color: #C2CAD0; width: 1; }
way|z11-[waterway][name]												{ z-index: -2; text-color: white; text-position: line; font-size: 11; text: name; }
/* way|z12-[waterway][width]											{ z-index: -3; color: #C2CAD0; width: eval("tag('width')"); } */
area|z12-[waterway=riverbank], area|z14-[waterway=dock]					{ z-index: -3; fill-color: #C2CAD0; }

/* ==== Railways === */
way|z-14[railway=rail]													{ color: darkgray; z-index: 3; width: 1; dashes: 1,1; }
way|z15-[railway=rail]													{ color: darkgray; z-index: 3; width: 2; dashes: 1,1; }

/* ===== Roads (highway=*) ===== */
/* default text */
way|z12-[highway]														{ text-color: #000000; text-position: line; text-halo-color: white; text-halo-radius: 1; font-family: Technic; font-weight: bold; }

/* widths per zoom-level */
way|z-12[highway]														{ width: 2; }
way|z13[highway]														{ width: 4; }
way|z14[highway]														{ width: 5; }
way|z15-16[highway]														{ width: 6; }
way|z17[highway]														{ width: 9; }
way|z18-[highway]														{ width: 12; }

/* colors and styles per highway type. */
way[highway=motorway],way[highway=motorway_link],
way[highway=trunk],way[highway=trunk_link],
way[highway=primary],way[highway=primary_link]							{ color: #FFFFFF; casing-color: #D2D2D2; casing-width: 1; z-index: 6; font-size: 12; text: name; }

way|z10-13[highway=secondary], way|z10-13[highway=secondary_link]		{ color: #FFFFFF; width: 2; z-index: 5; }
way|z13-[highway=secondary],way|z13-[highway=secondary_link]			{ color: #FFFFFF; width: 5; casing-color: #D2D2D2; casing-width: 1; z-index: 5; font-size: 12; text: name; }

way|z12-13[highway=tertiary],way|z12-13[highway=tertiary_link]			{ color: #FFFFFF; width: 1; z-index: 5; }
way|z13-[highway=tertiary],way|z12-[highway=tertiary_link]				{ color: #FFFFFF; width: 4; casing-color: #D2D2D2; casing-width: 1; z-index: 5; font-size: 12; text: name; }

way|z11-12[highway=residential],
way|z11-12[highway=road],way|z11-12[highway=living_street],
way|z11-12[highway=unclassified]										{ color: #FFFFFF; width: 1; z-index: 4; }
way|z13[highway=residential],
way|z13[highway=road],way|z13[highway=living_street],
way|z13[highway=unclassified]											{ color: #FFFFFF; width: 2; casing-color: #D2D2D2; casing-width: 1; z-index: 4; }
way|z14-[highway=residential],
way|z14-[highway=road],way|z14-[highway=living_street],
way|z14-[highway=unclassified]											{ color: #FFFFFF; width: 4; casing-color: #D2D2D2; casing-width: 1; z-index: 4; font-size: 12; text: name; }

way|z16-[highway=service]												{ color: #FFFFFF; width: 2; z-index: 4; }
way|z16-[highway=track]													{ color: #FFFFFF; width: 1; dashes: 6,2; z-index: 5; }

/* pedestrian/cycleway styling */
way|z16-[highway=foot], way|z16-[highway=path], 
way|z16-[highway=footway]												{ color: #FFFFFF; width: 1; dashes: 2,2; z-index: 3; }
way|z16-[highway=cycleway]												{ color: #FFFFFF; width: 1; dashes: 2,2; z-index: 3; }